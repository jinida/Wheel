@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace WheelApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/phosphor-icons@1.4.2/src/css/icons.min.css" />
    <link href="WheelApp.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="Server" />
</head>
<body>
    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script src="js/fileInterop.js?v=9"></script>
    <script src="js/blaozrInterop.js?v=9"></script>
    <script src="js/directUpload.js?v=9"></script>
    <script src="js/keyboardShortcuts.js?v=9"></script>
    <script src="_framework/blazor.server.js" autostart="false"></script>
    <script>
        Blazor.start({
            reconnectionOptions: {
                maxRetries: 8,
                retryIntervalMilliseconds: 5000
            },
            circuit: {
                reconnectionHandler: {
                    onConnectionDown: () => console.log("Connection lost. Attempting to reconnect..."),
                    onConnectionUp: () => console.log("Connection restored!")
                }
            }
        });
    </script>
</body>
</html>
